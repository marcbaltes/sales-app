	}
	if(val != 1){
		updateAllTabs("inline");
		document.getElementById('expandClientHeaderInfo').innerHTML = '<a href=\"javascript:showClientInfoHeader(1)\" tabindex=-1><img src=\"/images/newminus.gif\" border=0></a>';
